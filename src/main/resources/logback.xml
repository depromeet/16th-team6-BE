<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="5 seconds">
    <appender name="CONSOLE_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %highlight([%-5level]) %d{yy-MM-dd HH:mm:ss.SSS} %green([%thread]) %cyan([%logger{0}:%line])-%message%n
            </pattern>
        </encoder>
    </appender>

    <appender name="WEBHOOK_APPENDER" class="com.deepromeet.atcha.shared.logging.DiscordAppender">
        <webhookUrl>{DISCORD_WEBHOOK_URL}</webhookUrl>
        <username>junwon</username>
        <avatarUrl>https://avatars.githubusercontent.com/u/112798598</avatarUrl>
        <format>
            <label>
                <pattern>profile=dev,host=${HOSTNAME},level=%level</pattern>
                <readMarkers>true</readMarkers>
            </label>
            <message>
                <pattern>
                    %highlight([%-5level]) %d{yy-MM-dd HH:mm:ss.SSS} %green([%thread]) %yellow([traceId=%X{traceId}]) %cyan([%logger{0}:%line])-%message%n
                </pattern>
            </message>
            <sortByTime>true</sortByTime>
        </format>
    </appender>

    <springProfile name="local">
        <root level="ERROR">
            <appender-ref ref="CONSOLE_APPENDER"/>
            <appender-ref ref="WEBHOOK_APPENDER"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE_APPENDER"/>
            <appender-ref ref="LOKI_APPENDER_PROD"/>
        </root>
    </springProfile>
</configuration>
